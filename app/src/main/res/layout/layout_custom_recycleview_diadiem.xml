<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtDiemTrungBinh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_circle"
                android:gravity="center"
                android:text="6.8"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTenQuanAnDiaDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kichi Kichi Gigamall Phạm Văn Đồng"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDiaChiDiaDiem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="480 Phạm Văn Đồng, Quận Thủ Đức"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtKhoangCach"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="1.0 km" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgHinhQuanAn"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/anh_1" />

        <Button
            android:id="@+id/btnDatHang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/custom_radiogroup_trangchu"
            android:text="@string/giaohang"
            android:visibility="gone"
            android:drawableTop="@drawable/icon_delivery"
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/containerBinhLuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cycleImageUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:src="@drawable/anh_4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTieuDe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kichi Kichi Gigamall Phạm Văn Đồng"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNoiDung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="480 Phạm Văn Đồng, Quận Thủ Đức"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtDiemDanhGia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.0" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerBinhLuan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cycleImageUser2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:src="@drawable/anh_4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTieuDe2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kichi Kichi Gigamall Phạm Văn Đồng"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtNoiDung2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="480 Phạm Văn Đồng, Quận Thủ Đức"
                    android:textSize="10sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtDiemDanhGia2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1.0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tongBL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_comment"
                android:drawablePadding="10dp"
                android:paddingLeft="5dp"
                android:text="1501"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtTongHinhAnh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_image"
                android:drawablePadding="10dp"
                android:paddingLeft="5dp"
                android:text="300"
                android:textAlignment="center"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
